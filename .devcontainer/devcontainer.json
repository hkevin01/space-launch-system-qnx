{
  "name": "SLS Dev",
  "dockerComposeFile": ["../docker-compose.dev.yml"],
  "service": "backend",
  "workspaceFolder": "/workspaces/project",
  "shutdownAction": "stopCompose",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "containerEnv": {
    "QT_QPA_PLATFORM": "xcb",
    "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
    "QT_ENABLE_HIGHDPI_SCALING": "1"
  },
  "postCreateCommand": "bash -lc 'python3 -m venv gui/.venv && source gui/.venv/bin/activate && pip install --upgrade pip && if [ -f gui/requirements.txt ]; then pip install -r gui/requirements.txt; fi'"
}
